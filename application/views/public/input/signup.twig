{% extends 'layouts/app.twig' %}

{% block title %}Регистрация{% endblock %}

{% block section %}

	<div class="row">
		<div class="col-md-8 col-md-offset-2">
			<div class="panel panel-default">
		<div class="panel-heading">
			Регистрация
		</div>
		<div class="panel-body">

			<form action="{{ path_for('signup')}}" method="post" autocomplete="off">
				<div class="form-group{{ errors.name ? ' has-error' : '' }}">
					<label for="name">Имя</label>
					<input type="text" name="name" id="name" class="form-control" value="{{ old.name }}">
					{% if errors.name %}
						<span class="help-block">{{ errors.name | first }}</span>
					{% endif %}
					
				</div>
				<div class="form-group{{ errors.surname ? ' has-error' : '' }}">
					<label for="surname">Фамилия</label>
					<input type="text" name="surname" id="surname" class="form-control">
					{% if errors.surname %}
						<span class="help-block">{{ errors.surname | first }}</span>
					{% endif %}
				</div>
				<div class="form-group{{ errors.middlename ? ' has-error' : '' }}">
					<label for="middlename">Отчество</label>
					<input type="text" name="middlename" id="middlename" class="form-control">
					{% if errors.middlename %}
						<span class="help-block">{{ errors.middlename | first }}</span>
					{% endif %}
				</div>
				<div class="form-group{{ errors.email ? ' has-error' : '' }}">
					<label for="Email">Email</label>
					<input type="email" name="email" id="Email" class="form-control">
					{% if errors.email %}
						<span class="help-block">{{ errors.email | first }}</span>
					{% endif %}
				</div>
				<div class="form-group{{ errors.telephon ? ' has-error' : '' }}">
					<label for="telephon">Телефон</label>
					<input type="text" name="telephon" id="telephon" class="form-control">
					{% if errors.telephon %}
						<span class="help-block">{{ errors.telephon | first }}</span>
					{% endif %}
				</div>
				<div class="form-group{{ errors.password ? ' has-error' : '' }}">
					<label for="password">Пароль</label>
					<input type="password" name="password" id="password" class="form-control">
					{% if errors.password %}
						<span class="help-block">{{ errors.password | first }}</span>
					{% endif %}
				</div>
				
				
				<div class="form-group">
					<button type="submit" name="submit" class="btn btn-primary">Зарегистрироваться</button>
				</div>
			</form>
		</div>
	</div>
		</div>
	</div>
{% endblock %}